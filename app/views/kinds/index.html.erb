<div class="basic-grey">
    <h1><%= "#{t('text.listing')} de #{@kinds.model.model_name.human(count: @kinds.size)}" %></h1>
    <table>
        <thead>
            <tr>
                <th><%= @kinds.model.human_attribute_name("description") %></th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @kinds.each do |kind| %>
            <tr style="background-color:<%= cycle('#FFF','#f0f0f5') %>">
                <td><%= kind.description %></td>
                <td><%= link_to t('links.edit'), edit_kind_path(kind) %></td>
                <td><%= link_to t('links.destroy'), kind, method: :delete, data: { confirm: t('dialogs.destroy') } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to t('links.new'), new_kind_path, class: "btn btn-success" %>
    <%= link_to t('links.back'), root_path, class: "btn btn-info" %>
</div>
