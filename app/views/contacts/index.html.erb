<div class="basic-grey">
  <h1><%= "#{t('text.listing')} #{@contacts.model.model_name.human(count: @contacts.size)}" %></h1>

  <table>
    <thead>
      <tr>
        <th><%= @contacts.model.human_attribute_name("name") %></th>
        <th><%= @contacts.model.human_attribute_name("kind_id") %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background-color:<%= cycle('#FFF','#f0f0f5') %>">
          <td><%= contact.name %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to t('links.edit'), edit_contact_path(contact) %></td>
          <td><%= link_to t('links.destroy'), contact, method: :delete, data: { confirm: t('dialogs.destroy') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br />
  <%= paginate @contacts %>
  <br />

  <%= link_to t('links.new'), new_contact_path, class: "btn btn-success" %>
  <%= link_to t('links.back'), root_path, class: "btn btn-info" %>

</div>
